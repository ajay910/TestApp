<?xml version="1.0" encoding="utf-8" ?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

  <style name="Theme.SplashScreen" parent="@android:style/Theme.Holo.Light.NoActionBar">
    <item name="android:windowBackground">@drawable/SplashScreen</item>
  </style>

  <style name="Theme.AppTheme" parent="Base.Theme.AppCompat.Light">
    <!-- overwrite application default Style-->
    <item name="android:windowNoTitle">true</item>
    <item name="windowNoTitle">true</item>
    <!--<item name="android:windowTranslucentStatus">true</item>-->
    <item name="windowActionBar">false</item>
    <item name="android:textSize">@string/RegularSize</item>
    <item name="android:textColor">@color/AppFontColor</item>
    <item name="android:windowBackground">@color/AppBackground</item>

    <!-- overwrite default button Style -->
    <item name="buttonStyle">@style/AppTheme.GreenButton</item>
    <item name="android:buttonStyle">@style/AppTheme.GreenButton</item>
    <item name="android:editTextStyle">@style/AppTheme.EditText</item>
  </style>
  
   
  <!-- Extended Action bar start -->
  
  <style name="AppTheme.ActionBar" parent="@style/Widget.AppCompat.Toolbar">
    <item name="android:background">@color/Purple</item>
    <item name="background">@color/Purple</item>
    <item name="contentInsetLeft">0dp</item>
    <!--<item name="android:contentInsetLeft">0dp</item>-->
    <item name="contentInsetRight">0dp</item>
    <!--<item name="android:contentInsetRight">0dp</item>-->
    <item name="contentInsetStart">0dp</item>
    <!--<item name="android:contentInsetStart">0dp</item>-->
    <item name="contentInsetEnd">0dp</item>
    <!--<item name="android:contentInsetEnd">0dp</item>-->
    
  </style>

  <!-- Extended Action bar End -->


  <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
    <item name="colorPrimary">@color/black</item>
    <item name="colorPrimaryDark">@color/black</item>
    <item name="colorAccent">@color/black</item>
    <item name="borderlessButtonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
  </style>
  
   <!--Extended Button start-->
  <style name="AppTheme.Button" parent="android:Widget.Button">
    <item name="android:textSize">@string/LargeSize</item>
    <item name="android:paddingTop">@dimen/_10sdp</item>
    <item name="android:paddingBottom">@dimen/_10sdp</item>
    <item name="android:paddingLeft">@dimen/_5sdp</item>
    <item name="android:paddingRight">@dimen/_5sdp</item>
  </style>

  <style name="AppTheme.GreenButton" parent="AppTheme.Button">
    <item name="android:background">@drawable/GreenButton</item>
    <item name="android:textColor">@color/white</item>
  </style>
  <!--Extended Button end-->

  <!-- Extended Edit text -->
  <style name="AppTheme.EditText" parent="android:Widget.EditText">
    <item name="android:background">@color/white</item>
    <item name="android:textColor">@color/TextBoxFontColor</item>
    <item name="android:textColorHint">@color/TextBoxHintColor</item>
    <item name="android:textSize">@string/MediumSize</item>
    <item name="android:paddingTop">@dimen/_8sdp</item>
    <item name="android:paddingBottom">@dimen/_8sdp</item>
    <item name="android:paddingLeft">@dimen/_5sdp</item>
    <item name="android:paddingRight">@dimen/_5sdp</item>
    <item name="android:gravity">center_vertical</item>
  </style>

 
</resources>
